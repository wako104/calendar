<%# Vertical Nav Bar %>
<div class="mx-auto flex flex-wrap">
  <div class="h-screen flex flex-col justify-between p-2 w-64">
    <div class="w-full h-auto flex flex-col py-4 px-2 text-gray-200 bg-zinc-800 rounded text-left font-light capitalize shadow-lg">  
      <div class="text-[#94B0DA] font-semibold text-center cursor-pointer mt-2 mx-auto mb-7">Cal</div>
      <div class="w-full flex justify-center mb-5">
        <div class="cursor-pointer px-4 py-2 w-auto hover:bg-zinc-700 rounded-xl text-center font-normal border border-gray-200">
          <span>Create Calendar</span>

        </div>
        
      </div>

      <% calendar_items = [
        { icon: "ri-calendar-2-line", label: "main calendar" },
        { icon: "ri-calendar-2-line", label: "social calendar" },
        { icon: "ri-calendar-2-line", label: "personal calendar" },
      ] %>

      <% calendar_items.each do |item| %>
        <span class="cursor-pointer px-2 py-1 hover:bg-zinc-700 hover:text-white rounded block mb-5">
          <i class="<%= item[:icon] %>"></i>
          <span class="mx-4"><%= item[:label] %></span>
        </span>
      <% end %>
    </div>

    <div class="w-full h-auto flex flex-col pb-4 pt-6 px-2 text-gray-200 bg-zinc-800 rounded text-left font-light capitalize shadow-lg">
      <% bottom_items = [
        { icon: "ri-account-box-line", label: "account" },
        { icon: "ri-settings-4-line", label: "settings" }
      ] %>

      <% bottom_items.each do |item| %>
        <span class="cursor-pointer px-2 py-1 hover:bg-zinc-700 hover:text-white rounded block mb-5">
          <i class="<%= item[:icon] %>"></i>
          <span class="mx-4"><%= item[:label] %></span>
        </span>
      <% end %>
    </div>
  </div>
</div>
